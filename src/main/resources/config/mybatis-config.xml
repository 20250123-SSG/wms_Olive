<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="config/connection-config.properties"/>

    <typeAliases>
        <!-- Login -->
        <typeAlias alias="Login" type="com.minisec.common.login.Login"/>
        <!-- Warehouse Product -->
        <typeAlias alias="ProductDto" type="com.minisec.warehouse.model.dto.ProductDto"/>
        <!-- Storage Input -->
        <typeAlias alias="StorageDto" type="com.minisec.warehouse.model.dto.StorageDto"/>
    </typeAliases>

    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!-- DB Connect Check -->
        <mapper resource="mapper/healthcheck-mapper.xml"/>
        <!-- Login -->
        <mapper resource="mapper/login-mapper.xml"/>
        <!-- WareHouse -->
        <mapper resource="mapper/warehouse-mapper.xml"/>
        <!-- Storage -->
        <mapper resource="mapper/storage-mapper.xml"/>

    </mappers>
</configuration>