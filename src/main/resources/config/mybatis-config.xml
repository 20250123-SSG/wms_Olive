<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource= "config/connection-config.properties"/>

    <typeAliases>
        <!-- Login -->
        <typeAlias alias="Login" type="com.minisec.common.login.Login"/>
        <!-- User -->
        <typeAlias type="com.minisec.user.model.dto.order.StoreDto" alias="StoreDto"/>
        <typeAlias type="com.minisec.user.model.dto.order.OrderProductDto" alias="OrderProductDto"/>
        <typeAlias type="com.minisec.user.model.dto.order.OrderDto" alias="OrderDto"/>
        <typeAlias type="com.minisec.user.model.dto.order.StoreInventoryDeductionDto" alias="StoreInventoryDeductionDto"/>
        <typeAlias type="com.minisec.user.model.dto.order.UserBalanceUpdateDto" alias="UserBalanceUpdateDto"/>
        <typeAlias type="com.minisec.user.model.dto.StoreProductDto" alias="StoreProductDto"/>
        <typeAlias type="com.minisec.user.model.dto.cart.CartDto" alias="CartDto"/>

        <!-- Warehouse Product -->
        <typeAlias alias="ProductDto" type="com.minisec.warehouse.model.dto.ProductDto"/>
        <!-- Storage Input -->
        <typeAlias alias="StorageDto" type="com.minisec.warehouse.model.dto.StorageDto"/>
    </typeAliases>

    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <!-- DB Connect Check -->
        <mapper resource="mapper/healthcheck-mapper.xml"/>
        <!-- Login -->
        <mapper resource="mapper/login-mapper.xml"/>
        <!-- User -->
        <mapper resource="mapper/store-mapper.xml"/>
        <mapper resource="mapper/store-product-mapper.xml"/>
        <mapper resource="mapper/user-order-mapper.xml"/>
        <mapper resource="mapper/user-order-detail-mapper.xml"/>
        <mapper resource="mapper/cart-mapper.xml"/>
        <mapper resource="mapper/user-mapper.xml"/>
        <!-- WareHouse -->
        <mapper resource="mapper/warehouse-mapper.xml"/>
        <!-- Storage -->
        <mapper resource="mapper/storage-mapper.xml"/>

        <!-- StoreOrder -->
        <mapper resource="mapper/store-order-mapper.xml"/>
        <!-- StoreUser -->
        <mapper resource="mapper/store-user-mapper.xml"/>

    </mappers>
</configuration>